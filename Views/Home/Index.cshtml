@model IEnumerable<Karban.Models.KanbanModel>


@{
    ViewData["Title"] = "Home Page";
    var item = TempData["data"];
    //Layout = null;
}

    <head>
        <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
        <link href="~/css/site.css" rel="stylesheet" />
        <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
        <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    </head>

<div class="row">
    <div class="col-md-4">
        <h5 class="effect "><center>To Do</center></h5>
        <div class="scroll">

            @foreach (var item1 in Model.Where(m => m.StatusCode == "Assigned").ToList())
            {
                <div class="column">
                    <div class="card">
                        <div class="clsboxHeader">
                            <div class="row">
                                <div class="col-md-6" style="color: #49556b;font-size: x-large;">@item1.CodeId</div>
                                <div class="col-md-6" align="right" style="font-size: xx-large;">&#129333;</div>
                            </div>
                        </div>
                        <div class="col-md-10">
                            <span class="clsname">
                                @item1.DeveloperName
                            </span>
                        </div>
                        <div class="col-md-10"><span class="clsname"> @item1.Priority</span></div>
                        <div class="col-md-12" style="font-style: oblique; font-size:small;"> @item1.Subject</div>
                    </div>
                </div>
            }
        </div>

    </div>

    <div class="col-md-4">
        <div class="effect">
            <h5><center>InProgress</center></h5>
        </div>
        <div class="scroll">
            @foreach (var item1 in Model.Where(m => m.StatusCode == "InProgress").ToList())
            {
                <div class="column">
                    <div class="card">
                        <div class="clsboxHeader">
                            <div class="row">
                                <div class="col-md-6" style="color: #49556b;font-size: x-large;">@item1.CodeId</div>
                                <div class="col-md-6" align="right" style="font-size: xx-large;">&#129333;</div>
                            </div>
                        </div>
                        <div class="col-md-10">
                            <span class="clsname">
                                @item1.DeveloperName
                            </span>
                        </div>
                        <div class="col-md-10"><span class="clsname"> @item1.Priority</span></div>
                        <div class="col-md-10" style="font-style: oblique; font-size:small;"> @item1.Subject</div>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="col-md-4">
        <div class=" effect">
            <h5><center>Done</center></h5>
        </div>
        <div class="scroll">
            @foreach (var item1 in Model.Where(m => m.StatusCode == "Resolved").ToList())
            {
                <div class="column" id="@item1.CodeId">
                    <div class="card">
                        <div class="clsboxHeader">
                            <div class="row">
                                <div class="col-md-6" style="color: #49556b;font-size: x-large;">@item1.CodeId</div>
                                <div class="col-md-6" align="right" style="font-size: xx-large;">&#129333;</div>
                            </div>
                        </div>
                        <div class="col-md-10">
                            <span class="clsname">
                                @item1.DeveloperName
                            </span>
                        </div>
                        <div class="col-md-10"><span class="clsname"> @item1.Priority</span></div>
                        <div class="col-md-10" style="font-style: oblique; font-size:small;"> @item1.Subject</div>
                    </div>
                </div>

            }
        </div>
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        $("#1003").draggable();
    });
</script>



